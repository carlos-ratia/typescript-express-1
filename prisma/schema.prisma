generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DSN")
}

model Brand {
  id       String     @id @default(uuid())
  name     String
  Campaign Campaign[]
}

model SequelizeMeta {
  name String @id
}

model Campaign {
  id      String @id @default(uuid())
  name    String
  brandId String
  Brand   Brand  @relation(fields: [brandId], references: [id])

  @@index([brandId], name: "fk_brand_brandId_id")
}

model Events {
  id         String   @id @default(uuid())
  createAt   DateTime @default(now())
  eventType  String
  entityType String
  entityId   String
  payload    Json
}
