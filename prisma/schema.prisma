generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DSN")
}

model Brand {
  id            String          @id @default(uuid())
  name          String
  BrandWatchDog BrandWatchDog[]
  Campaign      Campaign[]
}

model SequelizeMeta {
  name String @id
}

model Campaign {
  id      String @id
  name    String
  brandId String
  Brand   Brand  @relation(fields: [brandId], references: [id])

  @@index([brandId], name: "fk_brand_brandId_id")
}

model BrandWatchDog {
  id        String   @id @default(uuid())
  brandId   String
  createAt  DateTime @default(now())
  operation String
  payload   Json
  Brand     Brand    @relation(fields: [brandId], references: [id])

  @@index([brandId], name: "fk_brand_brandId_id_2")
}

model Event {
  eventType = CREATE
  entityType = CAMPAING,
  entityID = 111,
  paylod:
}

